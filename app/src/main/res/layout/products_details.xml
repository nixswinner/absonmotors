<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    android:padding="20dp">


    <ImageView
        android:id="@+id/product_image"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:src="@drawable/logo"
        />

    <LinearLayout
        android:paddingTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="Name :"/>

        <TextView
            android:id="@+id/product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="this"/>


    </LinearLayout>


    <LinearLayout
        android:visibility="gone"
        android:paddingTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="Price :"/>


        <TextView
            android:id="@+id/product_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="1000"/>


    </LinearLayout>


    <LinearLayout
        android:paddingTop="5dp"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="Seller:"/>

        <TextView
            android:id="@+id/sellers_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Nixon  Tergech"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:layout_weight="2"
            android:text=""
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:visibility="gone"
            android:id="@+id/product_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_weight="1"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Donec et odio pellentesque diam volutpat commodo sed. Bibendum enim facilisis gravida neque convallis. Malesuada proin libero nunc consequat interdum. Feugiat scelerisque varius morbi enim. Urna nunc id cursus metus aliquam eleifend. Erat nam at lectus urna duis convallis. Convallis aenean et tortor at risus viverra. Proin sagittis nisl rhoncus mattis rhoncus urna. Adipiscing vitae proin sagittis nisl. Scelerisque eu ultrices vitae auctor eu. Faucibus interdum posuere lorem ipsum dolor. Tellus elementum sagittis vitae et leo duis. Arcu non sodales neque sodales ut etiam sit."/>

    </LinearLayout>

    <Button
        android:id="@+id/request_product"
        android:background="@drawable/rect"
        android:textColor="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:text="Request This Product"/>
    <Button
        android:id="@+id/request_logbook"
        android:background="@drawable/rect"
        android:textColor="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:text="Request For A Logbook"/>
    <Button
        android:id="@+id/request_loan_buying"
        android:background="@drawable/rect"
        android:textColor="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:text="Request For Loan Buying"/>
</LinearLayout>
